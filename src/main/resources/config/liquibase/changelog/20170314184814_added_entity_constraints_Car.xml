<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Car.
    -->
    <changeSet id="20170314184814-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="manufacturer_id"
                                 baseTableName="car"
                                 constraintName="fk_car_manufacturer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="manufacturer"/>

        <addForeignKeyConstraint baseColumnNames="link_id"
                                 baseTableName="car"
                                 constraintName="fk_car_link_id"
                                 referencedColumnNames="id"
                                 referencedTableName="link"/>

        <addForeignKeyConstraint baseColumnNames="cars_id"
                                 baseTableName="car_classification"
                                 constraintName="fk_car_classification_cars_id"
                                 referencedColumnNames="id"
                                 referencedTableName="car"/>
        <addForeignKeyConstraint baseColumnNames="classifications_id"
                                 baseTableName="car_classification"
                                 constraintName="fk_car_classification_classifications_id"
                                 referencedColumnNames="id"
                                 referencedTableName="classification"/>
        
        <addForeignKeyConstraint baseColumnNames="cars_id"
                                 baseTableName="car_traction"
                                 constraintName="fk_car_traction_cars_id"
                                 referencedColumnNames="id"
                                 referencedTableName="car"/>
        <addForeignKeyConstraint baseColumnNames="tractions_id"
                                 baseTableName="car_traction"
                                 constraintName="fk_car_traction_tractions_id"
                                 referencedColumnNames="id"
                                 referencedTableName="traction"/>
        
        <addForeignKeyConstraint baseColumnNames="cars_id"
                                 baseTableName="car_gas"
                                 constraintName="fk_car_gas_cars_id"
                                 referencedColumnNames="id"
                                 referencedTableName="car"/>
        <addForeignKeyConstraint baseColumnNames="gases_id"
                                 baseTableName="car_gas"
                                 constraintName="fk_car_gas_gases_id"
                                 referencedColumnNames="id"
                                 referencedTableName="gas"/>
        
    </changeSet>
</databaseChangeLog>
